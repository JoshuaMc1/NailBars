<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NailBars.Vistas.MapsNormal">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Source="mapanuevo.png" Aspect="Fill"
                   HeightRequest="{OnPlatform Android=500}"
                   WidthRequest="{OnPlatform  Android=200}">
            </Image>
            <Button CornerRadius="8" Margin="35,0,35,50"
                    Text="Ruta Mas Cercana al Salon"
                    x:Name="btnRutaMapa"
                    Clicked="btnRutaMapa_Clicked"
                    VerticalOptions="End"
                    BackgroundColor="#bc1463"
                    TextColor="White" />
        </Grid>
       
    </ContentPage.Content>
</ContentPage>